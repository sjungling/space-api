{
  "name": "space-api",
  "version": "0.1.0",
  "description": "Apollo GraphQL Server for space data",
  "main": "src/index.js",
  "scripts": {
    "start": "ts-node -P tsconfig.json src/index.ts",
    "generate": "yarn generate:schema && yarn generate:graphql-types",
    "generate:graphql-types": "graphql-codegen --config codegen.yml",
    "generate:watch": "graphql-codegen --watch --config codegen.yml",
    "generate:schema": "ts-node src/utilities/merge-schema.ts",
    "prestart": "yarn data:load && yarn generate",
    "predev": "yarn data:load && yarn generate",
    "postinstall": "yarn data:load",
    "data:load": "knex seed:run",
    "data:load-prod": "NODE_ENV=production knex seed:run",
    "format": "prettier -l -w '**/*.{ts,graphql,yml,json}'",
    "build": "yarn build:clean && yarn data:load-prod && yarn generate && yarn build:typescript && yarn sync:schema",
    "build:clean": "mkdir -p dist && rm -rf dist/*",
    "build:typescript": "tsc -p tsconfig.json --outDir dist/",
    "sync:schema": "node scripts/sync-gql.mjs",
    "start:prod": "node --inspect dist/index.js",
    "generate:codegen": "graphql-codegen --config codegen.yml"
  },
  "keywords": [],
  "author": "Scott Jungling",
  "license": "ISC",
  "dependencies": {
    "apollo-datasource": "^0.7.2",
    "apollo-server": "^2.19.0",
    "body-parser": "^1.19.0",
    "datasource-sql": "^1.3.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "sqlite3": "^5.0.0",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.3",
    "@graphql-codegen/fragment-matcher": "2.0.0",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.18.1",
    "@graphql-codegen/typescript-document-nodes": "1.17.8",
    "@graphql-codegen/typescript-graphql-files-modules": "1.18.0",
    "@graphql-codegen/typescript-operations": "1.17.10",
    "@graphql-codegen/typescript-resolvers": "1.17.12",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/node": "^14.14.7",
    "csv-parse": "^4.14.1",
    "globby": "^11.0.1",
    "knex": "^0.21.12"
  }
}